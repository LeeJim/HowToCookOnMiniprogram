<view class="wrapper">
  <t-tabs t-class="tabs" defaultValue="{{0}}" placement="left" bind:change="onTabsChange">
    <block wx:for="{{list}}">
      <t-tab-panel label="{{chineseMap[item.catetory]}}" value="{{index}}">
        <scroll-view scroll-y>
          <view wx:for="{{item.list}}" class="card" data-id="{{item.id}}" bind:tap="handleTap">
            {{item.name}}
          </view>
        </scroll-view>
      </t-tab-panel>
    </block>
  </t-tabs>
</view>

<t-dialog
  visible="{{subscribeModalVisible}}"
  title="订阅新版本通知"
  content="第一时间接收【最新功能】的消息"
  confirm-btn="我知道了"
  bind:confirm="handleSubscribe"
/>

